@model HealthInsurance.Models.Beneficiary

@{
    ViewData["Title"] = "Details";

    if (ViewBag.RoleId == 1)
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "HomeLayout";
    }
}

<div class="m-3">
    <img src="@Url.Content("~/Images/Beneficiaries/" + Model.Proofimage)" asp-append-version="true" style="max-width:100%; max-height:auto;" />
</div>

<div class="m-3 mt-4">
    @if (ViewBag.RoleId == 1)
    {
        <a href="/Admin/Beneficiary/" class="btn btn-lg btn-dark">Back to list</a>
    }
    else
    {
        <a href="/Beneficiaries/Index/" class="btn btn-lg btn-dark">Back to list</a>
    }

</div>



