@model IEnumerable<HealthInsurance.Models.Beneficiary>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body col-6">
                <h4 class="card-title">Beneficiaries</h4>
                <a type="button" href="/Beneficiaries/Create" class="btn btn-lg btn-dark mt-4">Add Beneficiary</a>
                <table class="table table-striped mt-4">
                    <thead>
                        <tr>
                            <th> Beneficiary name </th>
                            <th> Relative </th>
                            <th> Proof Image </th>
                            <th> Status </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Relative
                                </td>
                                <td>
                                    @if(item.Proofimage != null)
                                    {
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-sm">View Image</a>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == 2)
                                    {
                                        <a class="btn btn-sm btn-warning disabled" >Pending</a>
                                    }
                                    else if (item.Status == 1)
                                    {
                                        <a class="btn btn-sm btn-success disabled">Accepted</a>
                                    }
                                    else if (item.Status == 0)
                                    {
                                        <a class="btn btn-sm btn-danger disabled">Rejected</a>
                                    }
                                </td>
                                @* <td>
                            <a class="btn btn-dark btn-sm" asp-controller="Testimonials" asp-action="Edit" asp-route-id="@item.Id">Check</a>
                            <a class="btn btn-danger btn-sm" asp-controller="Testimonials" asp-action="Delete" asp-route-id="@item.Id">delete</a>
                            </td> *@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>





