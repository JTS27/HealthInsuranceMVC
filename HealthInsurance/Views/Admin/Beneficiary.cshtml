@model IEnumerable<HealthInsurance.Models.Beneficiary>

@{
    ViewData["Title"] = "Beneficiary";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Beneficiaries</h4>
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th> User </th>
                        <th> User Name </th>
                        <th> Beneficary Name </th>
                        <th> Proof Image </th>
                        <th> Status </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="@Url.Content("~/Images/Users/" + item.Subscription.User.Imagepath )" asp-append-version="true" />
                            </td>
                            <td>
                                @item.Subscription.User.Fname @item.Subscription.User.Lname
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Beneficiaries" asp-route-id="@item.Id" class="btn btn-dark btn-sm">View Image</a>

                            </td>
                            <td>
                                @if (item.Status == 2)
                                {
                                    <label class="badge badge-warning">Pending</label>
                                }
                                else if (item.Status == 1)
                                {
                                    <label class="badge badge-success">Accepted</label>
                                }
                                else if (item.Status == 0)
                                {
                                    <label class="badge badge-danger">Rejected</label>
                                }
                            </td>
                            <td>
                                <a class="btn btn-dark btn-sm" asp-controller="Beneficiaries" asp-action="Edit" asp-route-id="@item.Id">Check</a>
                                <a class="btn btn-danger btn-sm" asp-controller="Beneficiaries" asp-action="Delete" asp-route-id="@item.Id">delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


