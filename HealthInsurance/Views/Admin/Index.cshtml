@model IEnumerable<HealthInsurance.Models.User>

@{
    Layout = "_AdminLayout";
}


<div class="row"><!--------------------------------->
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
                <img src="~/DashboardAssets/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Registered Users <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.regUsers Users</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="~/DashboardAssets/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Subscribed Users <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">@ViewBag.subUsers Users</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                <img src="~/DashboardAssets/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Total Profit <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5">$@ViewBag.profit</h2>
            </div>
        </div>
    </div>
</div>
<div class="row"><!--------------------------------->
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Registered Users</h4>
                <table class="table table-striped mt-4">
                    <thead>
                        <tr>
                            <th> Picture </th>
                            <th> Full Name </th>
                            <th> Email </th>
                            <th> Role </th>
                            <th> Status </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="@Url.Content("~/Images/Users/" + item.Imagepath )" asp-append-version="true" />
                                </td>
                                <td>
                                    @item.Fname @item.Lname
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @if (item.Roleid == 1)
                                    {
                                        <span>Admin</span>
                                    }
                                    else
                                    {
                                        <span>Client</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Issub == 0)
                                    {
                                        <label class="badge badge-danger">Not Subscribed</label>
                                    }
                                    @if (item.Issub == 1)
                                    {
                                        <label class="badge badge-success">Subscribed</label>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
