@model IEnumerable<HealthInsurance.Models.User>

@{
    ViewData["Title"] = "RegUsers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Registered Users</h4>
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th> Picture </th>
                        <th> Full Name </th>
                        <th> Email </th>
                        <th> Role </th>
                        <th> Status </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="@Url.Content("~/Images/Users/" + item.Imagepath )" asp-append-version="true" />
                            </td>
                            <td>
                                @item.Fname @item.Lname
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @if (item.Roleid == 1)
                                {
                                    <span>Admin</span>
                                }
                                else
                                {
                                    <span>Client</span>
                                }
                            </td>
                            <td>
                                @if (item.Issub == 0)
                                {
                                    <label class="badge badge-danger">Not Subscribed</label>
                                }
                                @if (item.Issub == 1)
                                {
                                    <label class="badge badge-success">Subscribed</label>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


